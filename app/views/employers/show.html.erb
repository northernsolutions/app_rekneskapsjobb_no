<page id="employer_show">
  <div class="padding-24" style="padding:24px 0px;">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="row">
            <div class="col-md-12">
              <%= image_tag @employer.employer_header_image, class:"thumbnail", style:"width:100%;margin-bottom:24px !important;border-top-right-radius:3px;border-top-left-radius:3px;border-bottom-left-radius:0px;border-bottom-right-radius:0px;border:none !important;" %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-2 col-xs-6">
              <%= image_tag @employer.employer_logo_image, class:"thumbnail", style:"width:100%;margin-bottom:12px !important;" %>
            </div>
            <div class="col-md-10 col-xs-12">
              <h4 class="bold"><%= @employer.name %></h4>
              <p class="bold uppercase">Nettside og sosiale medier: &nbsp; <%= link_to "http://#{@employer.website_link}" do %><i class="fa fa-globe" aria-hidden="true"></i><% end %> &nbsp; <%= link_to "http://#{@employer.facebook_link}" do %><i class="fa fa-facebook" aria-hidden="true"></i><% end %> &nbsp; <%= link_to "http://#{@employer.twitter_link}" do %><i class="fa fa-twitter" aria-hidden="true"></i><% end %> &nbsp; <%= link_to "http://#{@employer.instagram_link}" do %><i class="fa fa-instagram" aria-hidden="true"></i><% end %> &nbsp; <%= link_to "http://#{@employer.linkedin_link}" do %><i class="fa fa-linkedin" aria-hidden="true"></i><% end %> &nbsp; <%= link_to "http://#{@employer.youtube_link}" do %><i class="fa fa-youtube" aria-hidden="true"></i><% end %></p>
              <p class="text-muted justify" style="margin-bottom: 24px !important;"><%= @employer.summary %></p>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <ul class="nav nav-tabs nav-justified" role="tablist">
                <li role="presentation" class="active"><a class="bold uppercase" href="#home" aria-controls="home" role="tab" data-toggle="tab">Om arbeidsgiver</a></li>
                <li role="presentation"><a class="bold uppercase" href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Vision</a></li>
                <li role="presentation"><a class="bold uppercase" href="#messages" aria-controls="messages" role="tab" data-toggle="tab">Ledige Stillinger (<%= @employer.jobs.count %>)</a></li>
              </ul>
              <div class="tab-content">
                <div role="tabpanel" class="tab-pane active" id="home" style="padding:24px 0px;"><%= @employer.about.html_safe %></div>
                <div role="tabpanel" class="tab-pane" id="profile" style="padding:24px 0px;"><%= @employer.vision.html_safe %></div>
                <div role="tabpanel" class="tab-pane" id="messages" style="padding:24px 0px;">
                  <div class="padding-24">
                    <h4 class="bold">Ledige Stillinger</h4>
                  </div>
                  <% @employer.jobs.each do |job| %>
                    <% if job.published_at? %>
                      <div class="none" style="padding:36px 0px;text-align:justify !important;border-bottom:1px solid #f5f5f5;">
                        <div class="row">
                          <div class="col-md-2 col-xs-6">
                            <%= image_tag job.employer.employer_logo_image, class:"thumbnail", style:"width:100%;margin-bottom:12px !important;" %>
                          </div>
                          <div class="col-md-10 col-xs-12">
                            <p class="uppercase"><% if job.exclusive %><span class="label" style="background:#FFC107 !important;border-color:#FFC107 !important;color:#fff;font-weight:500;border-radius:3px !important;">Exclusive</span> &middot; <% end %><span class="bold"><%= job.employer.name %></span> &middot; <%= job.job_category.name %> &middot; <%= job.job_type.name %></p>
                            <h4 class="bold"><%= job.title %></h4>
                            <p class="text-muted"><%= truncate(job.content.html_safe, length: 150, :escape => false) %></p>
                            <%= link_to "Vise jobb annonse", job, class:"btn", style:"background:#f5f5f5;color:#424242;border-color:#f5f5f5;font-weight:500;" %><% if job.employer.profile %> <%= link_to "Vise Bedriftsprofil", job.employer, class:"btn", style:"background:#424242;color:#fff;font-weight:600;border-color:#424242;" %><% end %><% if job.exclusive %> <%= link_to "Søk nå", job, class:"btn", style:"background:#009688;border-color:#009688;color:#fff;font-weight:500;" %><% end %>
                          </div>
                        </div>
                      </div>
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
