<page id="jobs_index">
  <div class="padding-2">
    <div class="container">
      <div class="row">
        <div class="col-md-2 hidden-xs">
          <div class="left_banner_image">
            <% @banners.each do |banner| %>
              <%= image_tag banner.left_banner_image, class:"thumbnail" %>
            <% end %>
          </div>
        </div>
        <div class="col-md-8">
          <div class="job-listing-search" style="margin-bottom:24px;">
            <%= form_tag search_jobs_path, method: :get do |f| %>
                  <div class="row">
                    <div class="col-md-6">
                      <div class="form-group">
                        <%= text_field_tag :search, nil, placeholder:"Sök", class:"form-control form-control-lg" %>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <%= text_field_tag :location, nil, placeholder: "Stockholm...", class:"form-control form-control-lg" %>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-6">
                      <div class="form-group">
                        <%= select_tag :job_category, options_from_collection_for_select(JobCategory.all, :id, :name), class:"form-control form-control-lg", style:"padding: 6px 12px;box-shadow:none !important;border-radius:0px !important;border:1px solid #f5f5f5 !important;" %>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <%= select_tag :job_type, options_from_collection_for_select(JobType.all, :id, :name), class:"form-control form-control-lg", style:"padding: 6px 12px;box-shadow:none !important;border:1px solid #f5f5f5 !important;" %>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-12">
                      <div class="form-group" style="margin-bottom:0rem;">
                        <%= submit_tag "Søk", class:"btn btn-lg btn-search-now", style:"margin-bottom:0px !important;width:100%;background:#FFC107 !important;border-color:#FFC107 !important;color:#fff;" %>
                      </div>
                    </div>
                  </div>
                <% end %>
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="job-listing-header" style="margin-bottom:36px;">
                <h4 class="bold">Ledige Stillinger</h4>
              </div>
            </div>
          </div>
          <div class="job-listing">
            <% @jobs.each do |job| %>
              <% if job.published_at? %>
                <div class="row">
                  <div class="col-md-12">
                    <div class="job-listing-single-job" style="margin-bottom:36px;">
                      <div class="row">
                        <div class="col-md-3">
                          <%= image_tag job.employer.employer_logo_image, class:"thumbnail" %>
                          <% if job.exclusive %><% if job.employer.profile %><%= link_to "Visa Bedriftsprofil", job.employer, class:"btn btn-view-employer", style:"background:#424242 !important;border-color:#424242 !important;margin-top:12px !important;width:100% !important;" %><% end %><% end %>
                        </div>
                        <div class="col-md-9">
                          <p class="uppercase"><span class="bold"><% if job.exclusive %> <span class="label label-exclusive">Exclusive</span> &nbsp; <% end %><%= job.employer.name %></span> &middot; <%= job.job_category.name %> &middot; <%= job.job_type.name %></p>
                          <h4 class="bold"><%= job.title %></h4>
                          <p class="text-muted"><%= truncate(job.content.html_safe, length: 150, :escape => false) %></p>
                          <%= link_to(job) do %><% if job.exclusive %><button class="btn btn-view-job-exclusive">Visa annonse</button> &nbsp; <%= link_to(job) do %><button class="btn btn-apply" style="background:#009688;color:#fff;border-color:#009688;font-weight:500;">Sök nå</button><% end %><% else %><button class="btn btn-view-job" style="background:#f5f5f5 !important;color:#424242 !important;font-weight:500 !important;border-color:#f5f5f5 !important;">Visa annonse</button><% end %><% end %>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
          <div class="job-listing-footer" style="text-align:center;">
            <div class="row">
              <div class="col-md-12">
                <%= will_paginate @collection, renderer: BootstrapPagination::Rails %>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-2 hidden-xs">
          <div class="right_banner_image">
            <% @banners.each do |banner| %>
              <%= image_tag banner.right_banner_image, class:"thumbnail" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
